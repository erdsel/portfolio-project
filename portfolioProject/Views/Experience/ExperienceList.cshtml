@model List<portfolioProject.Models.Experience>
@{
    ViewBag.Title = "ExperienceList";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;

}

<h2 class="mb-4">Yeteneklerim</h2>

<table class="table table-bordered">

    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Alt Başlık</th>
        <th>Açıklama</th>
        
    </tr>

    @foreach (var item in Model)
    {
        count++;
                <tr>
                    
                    <td>@count</td>
                    <td>@item.Title</td>
                    <td>@item.Subtitle</td>
                    <td>@item.Description</td>
                    <td><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-info">Güncelle</a></td>
                    
                </tr>
            }

</table>
<a href="/Experience/CreateExperience/" class="btn btn-primary">Yeni Deneyim Ekle</a>

